/*!-----------------------------------------------------------------
	Глобальные переменные
 -----------------------------------------------------------------*/
:root
	--colorWhite: #fff
	--colorBlack: #000
	--colorGray: #e3e6e8
	--borderRadius: .25rem

.t-success
	--bgColor: #4CAF50
	--bgColorHover: #46a049
	--borderColor: #3c763d
	--color: #001e00
.t-info
	--bgColor: #2196F3
	--bgColorHover: #0b7dda
	--borderColor: #1053a8
	--color: #003351
.t-warning
	--bgColor: #ff9800
	--bgColorHover: #ec9413
	--borderColor: #b5520e
	--color: #572d04
.t-danger
	--bgColor: #f44336
	--bgColorHover: #da190b
	--borderColor: #a94442
	--color: #4a1716
.t-secondary
	--bgColor: #fff
	--bgColorHover: #e6e6e6
	--color: #292b2c
	--borderColor: #ccc
.t-primary
.is-active
	--bgColor: #0275d8
	--bgColorHover: #01549b
	--borderColor: #003351
	--color: #fff