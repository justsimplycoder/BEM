/*!-----------------------------------------------------------------
	.header - модуль шапка сайта
 -----------------------------------------------------------------*/
.header
	background-color rgba(51, 153, 204, 0.5)
	&__menu
		background-color: rgba(10, 31, 41, 0.8)
		> .l-page-width
			height 32px
			// +mema(sizeMedium)
			// 	display flex
			// 	align-items center
			// 	justify-content flex-end
	&__title
		padding 15px 0
	&__images
		display flex
		justify-content space-around
		align-items center
	&__breadcrumb
		background-color: var(--colorGray)

// стрелка наверх
#l-top-scroll
	height 50px
	width 50px
	position fixed
	bottom 50px
	right 50px
	background #000
	color #fff
	text-align center
	line-height: 51px
	display flex
	justify-content center
	align-items center
	> .arrow
		--size: 24px
		display block
		margin-left 0
		top 8px
